<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingButton">
        <attr name="enableShrink" format="boolean" />
        <attr name="disableClickOnLoading" format="boolean" />
        <attr name="restoreTextWhenEnd" format="boolean" />
        <attr name="shrinkDuration" format="integer" />
        <attr name="loadingEndDrawableSize" format="dimension" />
        <attr name="loadingDrawableColor" format="color" />
        <attr name="loadingDrawablePosition" format="enum">
            <enum name="Start" value="0" />
            <enum name="Top" value="1" />
            <enum name="End" value="2" />
            <enum name="Bottom" value="3" />
        </attr>

        <attr name="endCompleteDrawable" format="reference" />
        <attr name="endFailDrawable" format="reference" />
        <attr name="endDrawableAppearTime" format="integer" />
        <attr name="endDrawableDuration" format="integer" />
    </declare-styleable>

    <!--聊天气泡-->
    <declare-styleable name="BubbleLayout">
        <attr name="bubbleBgColor" format="color" />
        <attr name="bubbleRadius" format="dimension" />
        <attr name="arrowWidth" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPositionY" format="dimension" />
        <attr name="arrowDirecrion" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!--聊天语音播放-->
    <declare-styleable name="WechatAudioPlayView">
        <attr name="color" format="color"></attr>
        <attr name="isReceiver" format="boolean"></attr>
    </declare-styleable>

    <!--个人主页下拉带进度progress-->
    <declare-styleable name="RoundProgressBar">
        <attr name="round_color" format="color" />
        <attr name="round_progressColor" format="color" />
        <attr name="round_width" format="dimension"></attr>
        <attr name="round_textColor" format="color" />
        <attr name="round_textsize" format="dimension" />
        <attr name="round_max" format="integer"></attr>
    </declare-styleable>

    <!--练习QQ计步器View-->
    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="color" /><!--外圈颜色-->
        <attr name="innerColor" format="color" /><!--进度颜色-->
        <attr name="bordeWidth" format="dimension" /><!--圆环宽度-->
        <attr name="stepTextSize" format="dimension" /><!--字体大小-->
        <attr name="stepTextColor" format="color" /><!--字体颜色-->
    </declare-styleable>

    <!--练习字体变色View-->
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" /><!--原始颜色-->
        <attr name="changeColor" format="color" /><!--变化颜色-->
    </declare-styleable>

    <!--练习炫酷进度条-->
    <declare-styleable name="MyProgreeBar">
        <attr name="outColor" format="color"/> <!--外圈颜色-->
        <attr name="inColor" format="color"/><!--内圈颜色-->
        <attr name="progressTextColor" format="color"/><!--文字颜色-->
        <attr name="progressTextSize" format="dimension"/><!--文字颜色-->
        <attr name="ringWidth" format="dimension"/><!--圆环宽度-->
    </declare-styleable>
</resources>