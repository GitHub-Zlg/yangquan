<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    app:ios="false">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/avater"
                android:layout_marginLeft="15dp"
                android:text="懒洋洋"
                android:layout_toRightOf="@+id/avater"
                android:maxLength="8"
                android:textColor="#333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/avater"
                android:layout_marginLeft="15dp"
                android:text="在吗?"
                android:layout_toRightOf="@+id/avater"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#AFAFAF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_time"
                android:text="9:54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textColor="#AFAFAF"
                android:textSize="13dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avater"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_avater"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_unread_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/oval_red"
                android:text="23"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:layout_alignTop="@+id/avater"
                android:layout_alignRight="@+id/avater"
                android:paddingRight="3dp"
                android:textColor="@color/colorWhite"
                android:textSize="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_delete"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_photo_num"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/colorWhite"
            android:textSize="13dp" />
    </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>